<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#CBC3E3">

    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon compte"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_view"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <TextView
                android:id="@+id/nom_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom complet:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/nom_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hamid"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toTopOf="@id/nom_label"
                app:layout_constraintLeft_toRightOf="@id/nom_label"/>
            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ic_baseline_3p_24"
                app:layout_constraintTop_toBottomOf="@id/nom_label"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hamid"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toTopOf="@id/email_label"
                app:layout_constraintLeft_toRightOf="@id/email_label"/>
            <TextView
                android:id="@+id/tel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                app:layout_constraintTop_toBottomOf="@id/email_label"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/tel_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hamid"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toTopOf="@id/tel_label"
                app:layout_constraintLeft_toRightOf="@id/tel_label"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>